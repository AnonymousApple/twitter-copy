<div class='main-content'>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want it to change)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimal</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm the changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-success' %>
    </div>

    <div class="form-group">
      <strong>Upload a Profile Picture:</strong>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.text_field :name, placeholder: "Your Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_field :username, placeholder: "Change your username", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_area :bio, placeholder: "Tell us about yourself...", class: "form-control" %>
    </div>
  <% end %>
</div>
<h3>Danger Zone</h3>
<div class='danger-zone'>
  <h3>Delete my account</h3>

  <p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: " Are you sure you want to delete this account?\n---------------------------------------------------------------------------\n| Unexpected bad things will happen if you don't read this!!!                         |\n---------------------------------------------------------------------------\n\n This action CANNOT be undone.\nWe will instantly delete all your tweets(" + current_user.tweets.length.to_s + ")\n and your followers(" + current_user.following_was.length.to_s + ").\n\n Your data will be erased, and anyone can use your username for their account.\n\n Please click OK to confirm this." }, method: :delete, class: 'btn btn-danger' %></p>
</div>
<%= link_to "Back", :back %>

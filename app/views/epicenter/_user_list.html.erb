<div class="row">
  <h1 style="text-align: center; vertical-align: middle;">All Users</h1>
  <% @users.each do |user| %>
    <div class="col-md-3">
      <div class="well user-list-wells">
        <div class="row">
          <div class="col-md-6">
            <% if !current_user.avatar.blank? %>
              <%= image_tag user.avatar.url, class: "user-pic-md", width: 170, height: 150 %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <%= link_to show_user_path(id: user.id) do %>
            <h3><%= user.name %></h3>
            <% if !user.tag.nil? %>
              =<%= tag.span user.tag, style: "color: #{user.color}" %>= | <%= user.username %>
            <% end %>
            <div class="col-md-6">
              <p>
                <% if current_user.following.include?(user.id) %>
                  <%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-primary unfollow_btn" %>
                <% else %>
                  <% if current_user.id != user.id %>
                    <%= link_to "Follow #{user.username}", now_following_path(id: user.id), class: "btn btn-primary" %>
                  <% end %>
                <% end %>
              </p>
            </div>
          <% end %>
          <p>
            <%= user.bio %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


<h1 style="text-align: center; vertical-align: middle;"><%= current_user.username %>'s Tweets</h1>
<style type='text/css'>
  .well.float-right {
    width: 150px;
    height: 280px;
    float: right;
  }
  td {
    border: 5px groove #ffaadd;
  }
  ul {
    list-style-type: circle;
  }
  th {
    border-right: 5px double red;
    border-left: 5px double red;
    border-top: 5px double red;
  }
</style>
<table class='table'>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3">Configuration</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message.html_safe %></td>
        <td><%= link_to tweet.user.username, show_user_path(id: tweet.user.id) %></td>
        <td><%= tweet.created_at %></td>
        <td><%= tweet.updated_at %></td>
        <td><%= link_to 'Show', tweet, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', tweet, method: :delete, data: { confirm: "Are you sure?\n This cannot be undone." }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="well float-right following-list" style='overflow-y: scroll; overflow-x: hidden;'>
  <h3>Status:</h3>
  <ul>
    <% if @followed_users.length == 1 %>
      <li>Following <%= @followed_users.length %> person</li>
    <% elsif @followed_users.length > 0 %>
      <li>Following <%= @followed_users.length %> people</li>
    <% else %>
      <p>You have no followers. Get followers <a href='/all_users'>here.</a></p>
    <% end %>
    <br />
    <% if @tweets.length == 1 %>
      <li>Created <%= @tweets.length %> tweet</li>
    <% elsif @tweets.length > 0 %>
      <li>Created <%= @tweets.length %> tweets</li>
    <% else %>
      <p>You have no tweets! Make a new one <%= link_to 'here.', new_tweet_path %></p>
    <% end %>
  </ul>
</div>
<br>

<a href='tweets/new' class='btn btn-default'>Make a new tweet</a>
